{
  "name": "luminar-organization/core",
  "description": "The core package of Luminar PHP ecosystem, providing essential functionality and structure",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Patryk Molenda",
      "email": "patryk.fr.molenda@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "autoload": {
    "psr-4": {
      "Luminar\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Luminar\\Core\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": ">=11.3.1",
    "phpstan/phpstan": ">=1.11.10",
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "test": "phpunit",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  }
}